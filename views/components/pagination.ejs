<!-- params: page (current page), pages (total num of pages), count (total num of results) -->
<div class="pagination">
    <div class="pagination__prev">
    <% if(page > 1) { %>
        <a href="<%= c.PUBLIC_PATH %><%= path %>/page/<%= parseInt(page) - 1 %>">Prev</a>
    <% } %>
    </div>
    <div class="pagination__text">
        <p>Page <%= page %> of <%= pages %> - <%= count %> total results</p>
    </div>
    <div class="pagination__next">
    <% if(page < pages) { %>
        <a href="<%= c.PUBLIC_PATH %><%= path %>/page/<%= parseInt(page) + 1 %>">Next</a>
    <% } %>
    </div>
</div>